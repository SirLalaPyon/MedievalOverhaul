			<li Class="MedievalOverhaul.IncidentProperties">
				<kindDef>DankPyon_Daer</kindDef>
				<max>1~2</max>
				<leaveMapAfterTime>true</leaveMapAfterTime>
			</li>
		</modExtensions>
	</IncidentDef>

