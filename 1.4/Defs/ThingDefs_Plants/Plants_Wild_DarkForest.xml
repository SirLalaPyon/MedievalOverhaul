		</plant>

		<modExtensions>
			<li Class="TransparentThings.ThingExtension">
				<transparentWhenPawnIsInsideArea>true</transparentWhenPawnIsInsideArea>
				<transparentWhenItemIsInsideArea>true</transparentWhenItemIsInsideArea>
