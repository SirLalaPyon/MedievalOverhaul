			<xpath>Defs/ThingDef[defName="VFE_PortableWoodFiredGenerator" or 
					defName="VFE_IndustrialWoodFiredGenerator"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs</xpath>
			<name>DankPyon_RawWood</name>
