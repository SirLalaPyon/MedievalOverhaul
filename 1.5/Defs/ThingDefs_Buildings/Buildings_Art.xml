<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="SculptureBase" Name="DankPyon_SculptureBase" Abstract="True">
		<rotatable>false</rotatable>
		<researchPrerequisites>
			<li>DankPyon_RusticFurniture</li>
		</researchPrerequisites>

		<dominantStyleCategory MayRequire="Ludeon.RimWorld.Ideology">DankPyon_OldWorld</dominantStyleCategory>

		<!--designationCategory>DankPyon_RuinFurniture</designationCategory-->
	</ThingDef>

	<!-- Ancient Base -->
	<ThingDef ParentName="SculptureBase" Name="DankPyon_AncientArtBase" Abstract="True">
		<recipeMaker>
			<recipeUsers Inherit="False"/>
		</recipeMaker>
		<rotatable>false</rotatable>
		<!--researchPrerequisites>
      <li>DankPyon_AncientArchitecture</li>
    </researchPrerequisites-->

		<dominantStyleCategory MayRequire="Ludeon.RimWorld.Ideology">DankPyon_OldWorld</dominantStyleCategory>
		<!--designationCategory>DankPyon_RuinFurniture</designationCategory-->
	</ThingDef>

	<!--Grand Statue Base-->
	<ThingDef ParentName="DankPyon_AncientArtBase" Name="DankPyon_Ancient_GrandSculptureBase" Abstract="True">
		<fillPercent>0.5</fillPercent>
		<rotatable>false</rotatable>
		<size>(2,2)</size>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<Beauty>600</Beauty>
			<Mass>28</Mass>
			<WorkToMake>205000</WorkToMake>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">60</StyleDominance>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>400</costStuffCount>
		<castEdgeShadows>true</castEdgeShadows>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
	</ThingDef>
	<!--============================================================-->

	<ThingDef ParentName="DankPyon_SculptureBase">
		<defName>DankPyon_Bust</defName>
		<label>bust</label>
		<description>A torso-sized piece of material sculpted into an artistic form.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Art/Bust</texPath>
		</graphicData>
		<fillPercent>0.35</fillPercent>
		<statBases>
			<MaxHitPoints>90</MaxHitPoints>
			<Mass>3</Mass>
			<Beauty>50</Beauty>
			<WorkToMake>18000</WorkToMake>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
		</statBases>
  
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
	</ThingDef>

	<ThingDef ParentName="DankPyon_SculptureBase">
		<defName>DankPyon_Pedestal</defName>
		<label>pedestal</label>
		<description>A stand that acts as a base to display your items.</description>
		<graphicData>
			<texPath>Art/Pedestal</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>90</MaxHitPoints>
			<Mass>3</Mass>
			<Beauty>20</Beauty>
			<WorkToMake>9000</WorkToMake>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
		</statBases>
		<fillPercent>0.35</fillPercent>
    
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
	</ThingDef>
  
	<ThingDef ParentName="DankPyon_SculptureBase">
		<defName>DankPyon_ArmorStatue</defName>
		<label>armor statue</label>
		<description>A lifesize replica of a knight.</description>
		<graphicData>
			<texPath>Art/ArmorStatue</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<uiIconScale>0.5</uiIconScale>
		<castEdgeShadows>true</castEdgeShadows>
		<rotatable>True</rotatable>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>7</Mass>
			<Beauty>100</Beauty>
			<WorkToMake>30000</WorkToMake>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">20</StyleDominance>
		</statBases>

		<size>(1,1)</size>
	</ThingDef>

	<!--==================== Ancient Statues ====================-->
	<!--Large Ancient Statues-->
	<ThingDef ParentName="DankPyon_SculptureBase">
		<defName>DankPyon_Ancient_Column</defName>
		<label>ancient column</label>
		<description>A tall pillar of ornate design.</description>
		<graphicData>
			<texPath>Art/Column1x1</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(5,5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<uiIconScale>0.5</uiIconScale>
		<castEdgeShadows>true</castEdgeShadows>
		<rotatable>True</rotatable>
		<altitudeLayer>Pawn</altitudeLayer>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
