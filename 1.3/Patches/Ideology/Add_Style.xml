<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Old Worlder -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/ThingDef[@Name = "DankPyon_BuildingBase" or @Name = "DankPyon_TableGatherSpotBase" or 
					@Name = "DankPyon_TableBase" or @Name = "DankPyon_FurnitureWithQualityBase" or @Name = "DankPyon_ArtableFurnitureBase" or 
					@Name = "DankPyon_ArtableBedBase" or @Name = "DankPyon_BedWithQualityBase"]</xpath>
                    <value>
                        <dominantStyleCategory>DankPyon_OldWorld</dominantStyleCategory>
                    </value>
				</li>

				<li Class="PatchOperationAdd"> 
					<xpath>Defs/IdeoIconDef[defName = "KnivesDown" or defName = "Steer" or defName = "TechLighthouse" or defName = "TechPulse"]/cultures</xpath>
                    <value>
						<li>DankPyon_OldWorlder</li>
                    </value>
				</li>

				<!--li Class="PatchOperationAdd"> 
					<xpath>Defs/ThingDef[defName = "Altar_Grand"]</xpath>
                    <value>
						<altitudeLayer>BuildingOnTop</altitudeLayer>
                    </value>
				</li-->


				<!-- Desert -->
				<li Class="PatchOperationAdd"> 
					<xpath>Defs/ThingDef[@Name = "DankPyon_BuildingFloorCoveringBase" or @Name = "DankPyon_RitualSeatBase"]</xpath>
                    <value>
                        <dominantStyleCategory>DankPyon_Desert</dominantStyleCategory>
                    </value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>
