			<texPath>Buildings/Ruin/ChaliceSilver</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
			<Beauty>26</Beauty>
