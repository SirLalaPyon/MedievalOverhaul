<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Wood -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>2</power>
					<cooldownTime>0.99</cooldownTime>
					<armorPenetrationBlunt>0.288</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]</xpath>
		<value>
			<equippedStatOffsets>
				<MeleeCritChance>0.2</MeleeCritChance>
				<MeleeParryChance>1</MeleeParryChance>
				<MeleeDodgeChance>0.13</MeleeDodgeChance>
			</equippedStatOffsets>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]/statBases</xpath>
		<value>
			<Bulk>0.07</Bulk>
			<MeleeCounterParryBonus>1.33</MeleeCounterParryBonus>
		</value>
	</Operation>

	<!-- A bonus multiplier on top of the base toughness rating of a material -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]</xpath>
		<value>
			<li Class="CombatExtended.StuffToughnessMultiplierExtensionCE">
				<toughnessMultiplier>5</toughnessMultiplier>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>0.1</StuffPower_Armor_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]/statBases/StuffPower_Armor_Blunt</xpath>
		<value>
			<StuffPower_Armor_Blunt>0.2</StuffPower_Armor_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]/statBases/StuffPower_Armor_Heat</xpath>
		<value>
			<StuffPower_Armor_Heat>0.025</StuffPower_Armor_Heat>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="DankPyon_DarkWood"]/stuffProps/statFactors</xpath>
		<value>
			<Mass>0.6</Mass>
			<MeleePenetrationFactor>0.5</MeleePenetrationFactor>
		</value>
	</Operation>

</Patch>