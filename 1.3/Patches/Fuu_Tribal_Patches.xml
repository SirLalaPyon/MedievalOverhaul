<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[Fuu] Uncompromising Tribal Faction</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!--Recipes-->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="UncompromisingTribalFaction_FireBow"]/recipeMaker/recipeUsers</xpath>
                    <value>
                        <li>DankPyon_Workbench</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="UncompromisingTribalFaction_Apparel_SmokeBomb"]/recipeMaker/recipeUsers</xpath>
                    <value>
                        <li>DankPyon_Workbench</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>