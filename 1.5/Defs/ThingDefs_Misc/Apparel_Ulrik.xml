		<costList>
			<DankPyon_Linen>20</DankPyon_Linen>
		</costList>

		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Headgear/Adorned_HeavyMailCoif/Adorned_HeavyMailCoif</wornGraphicPath>
