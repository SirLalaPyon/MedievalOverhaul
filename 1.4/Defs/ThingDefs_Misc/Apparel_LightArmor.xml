<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>DankPyon_Apparel_Sackcloth</defName>
		<label>Sackcloth</label>
		<description>A quickly made ragged piece of clothing, sewn from bits and pieces of various leathers.</description>
		<graphicData>
			<texPath>Apparel/LightArmor/TunicPoor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
			<researchPrerequisite>DankPyon_LeatherTanning</researchPrerequisite>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		
		<costStuffCount>40</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>

		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1600</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		  </statBases>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/LightArmor/TunicPoor</wornGraphicPath>
			<tags>
				<li>DankPyon_Peasant</li>
				<li>DankPyon_BrigandThug</li>

				<li>MedievalBasic</li>
            </tags>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

