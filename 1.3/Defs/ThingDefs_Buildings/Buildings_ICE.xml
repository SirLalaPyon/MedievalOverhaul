<?xml version="1.0" encoding="utf-8"?>
<Defs>


	<RecipeDef>
		<defName>Ice_Make_Ice</defName>
		<label>make ice</label>
		<description>Make ice from water.</description>
		<jobString>Making ice.</jobString>
		<workAmount>4500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_Sculpt</soundWorking>
		<products>
			<Ice_Resource_IceBlocks>25</Ice_Resource_IceBlocks>
		</products>
	</RecipeDef>

	<!--========UNUSED========-->
	<ThingDef ParentName="BuildingBase">
		<defName>Ice_Cellar</defName>
		<label>сellar</label>
		<description>The сellar is designed to cool water and extract ice from it.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Production/Apiary</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5,5)</drawSize>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<statBases>
			<WorkToBuild>3000</WorkToBuild>
		</statBases>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>false</useHitPoints>
		<size>(4,4)</size>
		<passability>Standable</passability>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
			<li>Ice_Make_Ice</li>
		</recipes>
		<stuffCategories>
			<li>Stony</li>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<ai_chillDestination>false</ai_chillDestination>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
			<isEdifice>false</isEdifice>    
		</building>
		<designationHotKey>Misc1</designationHotKey>
		<placeWorkers>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
			<li>Ice.PlaceWorker_OnSoil</li>
		</placeWorkers>
		<designationCategory Inherit="False"/>
	</ThingDef>

	<WorkGiverDef>
		<defName>Ice_DoBillsMakeIce</defName>
		<label>make ice at vault</label>
		<giverClass>WorkGiver_DoBill</giverClass>
		<workType>Crafting</workType>
		<priorityInType>100</priorityInType>
		<fixedBillGiverDefs>
			<li>Ice_Cellar</li>
		</fixedBillGiverDefs>
		<verb>make ice</verb>
		<gerund>make ice at</gerund>
		<requiredCapacities>
			<li>Manipulation</li>
		</requiredCapacities>
		<prioritizeSustains>true</prioritizeSustains>
	</WorkGiverDef>

	<!--========UNUSED========-->
	<ThingDef ParentName="LWM_DeepStorage">
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<defName>Ice_MedievalFridge</defName>
		<label>Medieval fridge</label>
		<description>Simple refrigerator. Requires ice to cool.</description>
		<graphicData>
			<texPath>Production/Apiary</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2.8,1.35)</drawSize>
		</graphicData>
		<tickerType>Normal</tickerType>
		<drawerType>MapMeshAndRealTime</drawerType>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>80</pathCost>
		<fillPercent>0.5</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<stuffCategories>
			<li>Stony</li>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>9000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(2,1)</size>
		<comps>
			<li Class='LWM.DeepStorage.Properties'>
				<maxNumberStacks>5</maxNumberStacks>
				<minTimeStoringTakes>25</minTimeStoringTakes>
				<additionalTimeEachDef>30</additionalTimeEachDef><!-- Got to sort things! -->
				<showContents>false</showContents>
				<overlayType>None</overlayType>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>2.0</fuelConsumptionRate>
				<fuelCapacity>20.0</fuelCapacity>
				<fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
				<fuelFilter>
					<thingDefs>
						<li>Ice_Resource_IceBlocks</li>
					</thingDefs>
				</fuelFilter>
				<initialFuelPercent>1</initialFuelPercent>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
			</li>
		</comps>
		<building>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<defaultStorageSettings>
				<filter>
					<categories>
						<li>Root</li>
					</categories>
				</filter>
			</defaultStorageSettings>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Root</li>
					</categories>
				</filter>
			</fixedStorageSettings>
		</building>
		<staticSunShadowHeight>0.6</staticSunShadowHeight>
		<defaultPlacingRot>South</defaultPlacingRot>
		<designationCategory Inherit="False"/>
	</ThingDef>
</Defs>
