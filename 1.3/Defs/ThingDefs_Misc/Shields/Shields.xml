		<apparel>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<bodyPartGroups>
				<li>LeftHand</li>
			</bodyPartGroups>
			<layers>
				<li>VFEC_OuterShell</li>
			</layers>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
        <comps>
            <li>
                <compClass>CompColorable</compClass>
            </li>
        </comps>
        <equippedAngleOffset>-30</equippedAngleOffset>
        <tools>
            <li>
                <label>base</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>centre</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <modExtensions>
            <li Class="VFECore.ThingDefExtension">
                <useFactionColourForPawnKinds>

                </useFactionColourForPawnKinds>
            </li>
        </modExtensions>
        <recipeMaker>
            <recipeUsers>
                <li>DankPyon_Anvil</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="DankPyon_BaseShield">
        <defName>DankPyon_Shield</defName>
        <label>round shield</label>
        <description>A round shield, provides decent coverage and protection against physical blows.</description>
        <graphicData>
            <texPath>Apparel/Utility/IconShield</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.83</drawSize>
        </graphicData>
        <stuffCategories>
            <li>Woody</li>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>80</costStuffCount>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <StuffEffectMultiplierArmor>0.34</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2.5</EquipDelay>
            <WorkToMake>2000</WorkToMake>
            <Mass>2.5</Mass>
        </statBases>
        <comps>
            <li Class="CompOversizedWeapon.CompProperties_OversizedWeapon"/>
            <li Class="VFECore.CompProperties_Shield">
                <shieldTags>
                    <li>DankPyon_RoundShield</li>
                </shieldTags>
                <useDeflectMetalEffect>false</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Neck</li>
                    <li>Torso</li>
                    <li>Arms</li>
                    <li>Hands</li>
                </coveredBodyPartGroups>
                <offHandGraphicData>
                    <texPath>Apparel/Utility/Shield</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <shaderType>CutoutComplex</shaderType>
                    <drawSize>1.6</drawSize>
                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(0, 0, 0.2)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(-0.1, 0, 0.2)</offset>
                        <behind>true</behind>
                    </east>
                    <south>
                        <offset>(-0.1, -0.04, 0.2)</offset>
                    </south>
                    <west>
                        <offset>(0.1, 0, 0.2)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
        </comps>
    </ThingDef>

