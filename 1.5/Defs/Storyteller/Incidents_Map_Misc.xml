		<category>Misc</category>
		<targetTags>
			<li>Map_PlayerHome</li>
		</targetTags>
		<baseChance>0.7</baseChance>
		<minRefireDays>30</minRefireDays>
		<workerClass>MedievalOverhaul.IncidentWorker_GenericWandersIn</workerClass><!-- don't change this -->
