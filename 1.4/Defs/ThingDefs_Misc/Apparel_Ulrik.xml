<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="ArmorSmithableBase" Name="DankPyon_AdornedArmorBase" Abstract="True">
        <recipeMaker>
            <recipeUsers>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
                <li>DankPyon_Anvil</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

    <!--==================== Body Armor ====================-->
    <ThingDef ParentName="DankPyon_AdornedArmorBase">
        <defName>DankPyon_Apparel_AdornedMailShirt</defName>
        <label>heavy hauberk (Adorned)</label>
        <description>A thick and robust hauberk, covered by a fine quilted surcoat. The layered structure provides an ample amount of warmth. Overall, an impressive piece of armor, decorated with trophies and holy symbols.</description>
        <graphicData>
			<texPath>Apparel/Adorned/Adorned_MailShirt/Adorned_MailShirt</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
       
       <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>100</costStuffCount>
        <costList>
            <DankPyon_Linen>70</DankPyon_Linen>
        </costList>
        
        <statBases>
            <WorkToMake>30000</WorkToMake>
            <MaxHitPoints>270</MaxHitPoints>
            <Mass>12</Mass>
            <StuffEffectMultiplierArmor>0.64</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
            <Insulation_Cold>15</Insulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>15</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.5</MoveSpeed>
        </equippedStatOffsets>

        <recipeMaker>
            <researchPrerequisites>
                <li>DankPyon_AdornedArmor</li>
                <li>DankPyon_ChainArmor</li>
            </researchPrerequisites>
        </recipeMaker>

        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Adorned/Adorned_MailShirt/Adorned_MailShirt</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <tags>
				<li>DankPyon_Initiate</li>
            </tags>
            <layers>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="DankPyon_AdornedArmorBase">
        <defName>DankPyon_Apparel_AdornedWarriorArmor</defName>
        <label>warrior's armor (Adorned)</label>
        <description>A robust mail shirt, covered by a fine quilted surcoat. The layered structure provides an ample amount of warmth. Overall, an impressive piece of armor, decorated with trophies and holy symbols.</description>
        <graphicData>
			<texPath>Apparel/Adorned/Adorned_Warrior/Adorned_Warrior</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
       
       <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>170</costStuffCount>
        <costList>
            <DankPyon_Linen>70</DankPyon_Linen>
        </costList>

        <statBases>
            <WorkToMake>38000</WorkToMake>
            <MaxHitPoints>290</MaxHitPoints>
            <Mass>15</Mass>
            <StuffEffectMultiplierArmor>0.76</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
            <Insulation_Cold>15</Insulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.8</MoveSpeed>
        </equippedStatOffsets>

        <recipeMaker>
            <researchPrerequisites>
                <li>DankPyon_AdornedArmor</li>
                <li>DankPyon_ChainArmor</li>
            </researchPrerequisites>
        </recipeMaker>

        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Adorned/Adorned_Warrior/Adorned_Warrior</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <tags>
				<li>DankPyon_Oathtaker</li>
            </tags>
            <layers>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="DankPyon_AdornedArmorBase">
        <defName>DankPyon_Apparel_AdornedHeavyPlate</defName>
        <label>full plate(Adorned)</label>
        <description>A heavy plate coverd by a thick riveted jacket and reinforced vambraces. The layered structure provides an ample amount of warmth. Typically worn by the oathbound, the best of the oathtakers, finely decorated with trophies and religious symbols.</description>
        <graphicData>
			<texPath>Apparel/Adorned/Adorned_FullPlate/Adorned_FullPlate</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
       
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>200</costStuffCount>
        <costList>
            <Gold>5</Gold>
            <DankPyon_Linen>70</DankPyon_Linen>
        </costList>
        
        <statBases>
            <WorkToMake>45000</WorkToMake>
            <MaxHitPoints>310</MaxHitPoints>
            <Mass>17</Mass>
            <StuffEffectMultiplierArmor>0.95</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
            <Insulation_Cold>15</Insulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>20</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-1.2</MoveSpeed>
            <SocialImpact>0.30</SocialImpact>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
        </equippedStatOffsets>

        <recipeMaker>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
            <researchPrerequisites>
                <li>DankPyon_AdornedArmor</li>
                <li>PlateArmor</li>
            </researchPrerequisites>
        </recipeMaker>

        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Adorned/Adorned_FullPlate/Adorned_FullPlate</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <tags>
				<li>DankPyon_Oathbound</li>
            </tags>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

    <!--==================== Headgear ====================-->

</Defs>