<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>Dankpyon_CupAndDice</defName>
		<label>cup and dice</label>
		<description>A medieval game of luck. Played with a leather cup and some dice.</description>
		<graphicData>
			<texPath>Joy/CupAndDice</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<shadowData>
				<volume>(0.65, 0.25, 0.6)</volume>
				<offset>(0, 0, -0.15)</offset>
			</shadowData>
			<damageData>
				<rect>(0.09375,0.296875,0.796875,0.703125)</rect>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>false</rotatable>
		<socialPropernessMatters>true</socialPropernessMatters>
		<fillPercent>0.40</fillPercent>
		<minTechLevelToBuild>Medieval</minTechLevelToBuild>
		<building>
			<joyKind>Gaming_Cerebral</joyKind>
		</building>
		<researchPrerequisites>
			<li>DankPyon_RusticFurniture</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>7000</WorkToBuild>
			<Mass>5</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>4</Beauty>
			<JoyGainFactor>1</JoyGainFactor>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>70</costStuffCount>
		<pathCost>30</pathCost>
		<passability>PassThroughOnly</passability>
		<designationCategory>Joy</designationCategory>
		<designationHotKey>Misc2</designationHotKey>
	</ThingDef>

	<ThingDef ParentName="FurnitureWithQualityBase">
